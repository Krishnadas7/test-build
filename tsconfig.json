{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",  // This line is important
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "electron-dist"]
}
